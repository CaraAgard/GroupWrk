<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sunrise"
    tools:context=".activities.PreLoginActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="center">

           <TextView
               android:id="@+id/viewTitle"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:fontFamily="cursive"
               android:text="@string/pre_login_title"
               android:textColor="@color/white"
               android:textSize="60sp"
               android:shadowColor = "#333"
               android:shadowDx = "3"
               android:shadowDy = "3"
               android:shadowRadius = "2"
               />

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginVertical="16dp"
               android:text="@string/enter_four_digit_pin"
               android:textColor="@color/white"
               android:textSize="20sp"
               android:shadowColor = "#444"
               android:shadowDx = "2"
               android:shadowDy = "2"
               android:shadowRadius = "4"

               />

           <EditText
               android:id="@+id/editTextNumberPassword"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginBottom="16dp"
               android:autofillHints=""
               android:background="@android:drawable/screen_background_light_transparent"
               android:ems="8"
               android:gravity="center_horizontal"
               android:hint="@string/pin"
               android:inputType="numberPassword"
               android:textAlignment="center"
                />

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginVertical="16dp"
               android:text="@string/confirm_four_digit_pin"
               android:textColor="@color/white"
               android:textSize="20sp"
               android:shadowColor = "#444"
               android:shadowDx = "2"
               android:shadowDy = "2"
               android:shadowRadius = "4"
               />

           <EditText
               android:id="@+id/editTextNumberPassword2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:layout_marginBottom="16dp"
               android:autofillHints=""
               android:background="@android:drawable/screen_background_light_transparent"
               android:ems="8"
               android:gravity="center_horizontal"
               android:hint="@string/pin"
               android:inputType="numberPassword"
               android:textAlignment="center"
                />

           <Button
               android:id="@+id/submit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:onClick="onSubmit"
               android:text="@string/submit"
               android:ems="8"
               app:backgroundTint="#6B4F9C"
                />
       </LinearLayout>
   </LinearLayout>

</ScrollView>