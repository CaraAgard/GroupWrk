<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/th"
        android:orientation="vertical"
        tools:context=".activities.ViewActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">


        <TextView
            android:id="@+id/mainDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="1"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/dated"
            android:inputType="date"
            android:text="@string/date"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

        <TextView
            android:id="@+id/viewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="@string/your_entry"
            android:textColor="@color/white"
            android:textSize="60sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">


        <TextView
            android:id="@+id/mainBody"
            android:layout_width="387dp"
            android:layout_height="325dp"
            android:layout_gravity="top"
            android:background="@android:drawable/screen_background_light_transparent"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <Button
        android:id="@+id/view_delete_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="deleteEntry"
        android:text="Delete" />

    <Button
        android:id="@+id/view_edit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToEditActivity"
        android:text="Edit" />

    <Button
        android:id="@+id/view_back_browse_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="backToBrowse"
        android:text="Back to Browse" />

</LinearLayout>
</ScrollView>
